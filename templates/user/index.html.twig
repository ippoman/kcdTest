    <h1 class="m-4">Salariées</h1>

    <section style="display:flex;justify-content: center;flex-flow:wrap;">
        {% for user in users %}
          <div class="card m-3" style="width: 18rem;" id="card_show">
            <img src="{{ vich_uploader_asset(user, 'imageFile') }}"" class="card-img-top" alt="photo de profil" style="height: 16rem;">
              <div class="card-body">
                <span>Nom:</span><p>{{ user.lastname }}</p> 
                <span>Prénom:</span><p>{{ user.firstname }}</p>
                <span>Fonction:</span><p>{{ user.fonction }}</p>
                <span>Véhicule:</span>
                {% if user.car %}
                <p>{{ user.car }}</p>
                {% else %}
                <p>Aucun véhicule</p>
                {% endif %}
                
                <div>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">Affiche</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                </div>
             </div>
          </div>
        {% else %}
            <div class="m-5">
                <td colspan="8">Aucun Salariées</td>
            </div>
        {% endfor %}
      </section>
