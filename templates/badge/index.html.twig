{% extends 'base.html.twig' %}

{% block title %}Badge
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-center" style="font-size:20px;">Badge</div>

	<section class="badge_section">

		<article class="mt-4">
			<div class="img_badge">
				<img src="{{ vich_uploader_asset(user, 'imageFile') }}" class="card-img-top mx-auto" alt="photo de profil">
			</div>
		</div>
	</article>

    <article class="mt-4">
			<div class=" ms-5">
				<p>Connecté(e)</p>
			<div class="neon-connect" style="width:100%;">
				<img src="{{'/images/img/icons8-spinner.gif'}}" class="card-img-top" alt="photo de profil" style="width: 5rem;">
			</div>
            {{date|date('d/m/Y')}}
		</div>
	</article>
    
    <article class="mt-4">
    <div class="info_user">
                <span>Véhicule:</span>
                {% if user.car %}
                <p>{{ user.car }}</p>
                {% else %}
                <p>Aucun véhicule</p>
                {% endif %}
                <span>Nom:</span><p>{{ user.lastname }}</p> 
                <span>Prénom:</span><p>{{ user.firstname }}</p>
                <span>Fonction:</span><p>{{ user.fonction }}</p>
                
               
    </div>
    </article>

</section>
  <div  class="p-5">
    <a class="nav-link btn btn-danger" style="color:white;" href="{{path('app_logout')}}">Déconnexion</a>
    <a class="nav-link btn btn-success mt-3" style="color:white;" href="{{path('app_main')}}">Acceuil</a>
  </div>

<style>
	.neon {

		background-color: green;
		color: green;
		border: 4px solid green;
		width: 2%;
		border-radius: 73px;
		height: 26px;
		animation: neon-connect infinite;
		animation-duration: 1s;

	}

	@keyframes neon-connect {
		from {
			opacity: 0;
		}

		to {
			opacity: 1;
		}
	}

	.img_badge > img {

		border: 3px solid tomato;
        display:flex;
        flex-flow:column wrap;
		border-radius: 30px;
		height: 18em;
		width: 21rem;


	}

    .badge_section{

        display:flex;
        justify-content:center;
        justify-content: space-evenly;
        flex-flow:wrap;

    }

    span{color:red;font-size:18px}
</style>{% endblock %}
